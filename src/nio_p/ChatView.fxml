<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nio_p.ChatClientViewController">
   <top>
      <Label text="채팅" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <TextArea fx:id="chat_area" prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </TextArea>
   </center>
   <bottom>
      <VBox prefHeight="90.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="30.0" prefWidth="400.0">
               <children>
                  <TextField fx:id="msg_tf" prefHeight="30.0" prefWidth="300.0" />
                  <Button fx:id="submit_bt" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="전송" />
               </children>
            </HBox>
            <Pane prefHeight="30.0" prefWidth="200.0" />
            <AnchorPane prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Button fx:id="back_bt" layoutX="324.0" layoutY="-1.0" mnemonicParsing="false" prefHeight="30.0" text="접속창으로" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </bottom>
</BorderPane>
